<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-2.5.xsd 
        http://www.springframework.org/schema/tx 
        http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

    <bean id="mockBO" class="com.wenqi.springioc.instance.xml.MockBusinessObject">
        <constructor-arg>
            <value>111111</value>
        </constructor-arg>
    </bean>

    <bean id="mockBO2" class="com.wenqi.springioc.instance.xml.MockBusinessObject">
        <constructor-arg>
            <value>222222</value>
        </constructor-arg>
    </bean>

    <bean id="mockBO3" class="com.wenqi.springioc.instance.xml.MockBusinessObject">
        <constructor-arg type="int">
            <value>333333</value>
        </constructor-arg>
    </bean>

    <!-- 使用默认的index和指定的index -->
    <bean id="mockBO4" class="com.wenqi.springioc.instance.xml.MockBusinessObject">
        <constructor-arg value="11111"/>
        <constructor-arg value="22222"/>
    </bean>
    <bean id="mockBO5" class="com.wenqi.springioc.instance.xml.MockBusinessObject">
        <constructor-arg index="1" value="11111"/>
        <constructor-arg index="0" value="22222"/>
    </bean>


    <bean id="mockBO6" class="com.wenqi.springioc.instance.xml.MockBusinessObject">
        <constructor-arg value="String_value"/>
        <property name="dependency2" value="1234"/>
        <property name="dependency3">
            <list>
                <value>string_value</value>
            </list>
        </property>
    </bean>


    <!-- 继承 -->
    <bean id="djNewsListener" class="com.wenqi.springioc.instance.impl.DowJonesNewsListener"/>
    <bean id="djNewsPersister" class="com.wenqi.springioc.instance.impl.DowJonesNewsPersister"/>
    <bean id="specificFXNewsListener" class="com.wenqi.springioc.instance.impl.SpecificFXNewsListener"/>

    <bean id="superNewsProvider" class="com.wenqi.springioc.instance.FXNewsProvider">
        <property name="newsListener">
           <ref bean="djNewsListener"/>
        </property>
        <property name="newPersistener">
            <ref bean="djNewsPersister"/>
        </property>
    </bean>

    <bean id="subNewsProvider" class="com.wenqi.springioc.instance.SpecificFXNewsProvider" parent="superNewsProvider">
        <property name="newsListener">
           <ref bean="specificFXNewsListener"/>
        </property>
    </bean>

    <!-- 模拟prototype模式的坑 -->
    <bean id="newsBean" class="com.wenqi.springioc.instance.method.FXNewsBean" scope="prototype"/>
    <bean id="mockPersister" class="com.wenqi.springioc.instance.method.MockNewsPersister">
        <property name="newsBean">
            <ref bean="newsBean"/>
        </property>
    </bean>

    <bean id="mockPersister2" class="com.wenqi.springioc.instance.method.MockNewsPersister2"/>

    <bean id="newsBeanFactory" class="org.springframework.beans.factory.config.ObjectFactoryCreatingFactoryBean">
        <property name="targetBeanName">
            <idref bean="newsBean"/>
        </property>
    </bean>
    <bean id="mockPersister3" class="com.wenqi.springioc.instance.method.MockNewsPersister3">
        <property name="newsBeanFactory">
            <ref bean="newsBeanFactory"/>
        </property>
    </bean>

    <!-- 方法替换 -->
    <bean id="methodReplaceFXNewsProvider" class="com.wenqi.springioc.instance.FXNewsProvider">
        <property name="newsListener">
            <ref bean="djNewsListener"/>
        </property>
        <property name="newPersistener">
            <ref bean="djNewsPersister"/>
        </property>
        <replaced-method name="getAndPersistNews" replacer="fXNewsProviderMethodReplacer"/>
    </bean>
    <bean id="fXNewsProviderMethodReplacer" class="com.wenqi.springioc.instance.method.FXNewsProviderMethodReplacer"/>

</beans>